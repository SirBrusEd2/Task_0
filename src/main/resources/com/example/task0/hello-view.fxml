<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.task0.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Введите сумму чека:" />
  <TextField fx:id="inputField" />

  <Button text="Большие чаевые (15%)" onAction="#handleCalculateBigTip" />
  <Label text="Обычные чаевые (10%-9%) Сколько оставить при обычных чаевых? 10% или 9%"/>
  <TextField fx:id="inputprocentField" />
  <Button text="Рассчитать" onAction="#handleCalculateNormalTip" />
  <Button text="Маленькие чаевые (3%)" onAction="#handleCalculateSmallTip" />

  <Label text="Сумма чаевых:" />
  <TextField fx:id="resultField" editable="false" />

  <Label text="Общая сумма с чаевыми:" />
  <TextField fx:id="totalField" editable="false" /> <!-- Новое поле для полной суммы -->
</VBox>
